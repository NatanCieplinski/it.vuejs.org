<h2 id="current-premium-sponsors">Sponsor Premium attuali</h2>

<h3 id="special-sponsors">Sponsor Speciali</h3>

<p class="platinum">
  <%_ for (const sponsor of theme.special_sponsors) {_%>
  <a href="<%- sponsor.url %>" target="_blank" rel="noopener">
    <img
      src="<%- url_for(`/images/${sponsor.img}`) %>"
